<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity"
                android:background="#424242">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/kin_face"
            android:layout_marginRight="26dp"
            android:layout_alignParentRight="true"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/title"
            android:id="@+id/textViewAboutMe"
            android:textColor="#ffffff"
            android:layout_alignTop="@+id/imageView"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/nameLabel"
            android:id="@+id/textViewNameLabel"
            android:layout_below="@+id/textViewAboutMe"
            android:layout_alignLeft="@+id/textViewAboutMe"
            android:layout_marginTop="25dp"
            android:textColor="#ffffff"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/nameData"
            android:id="@+id/textViewNameData"
            android:layout_alignBottom="@+id/textViewNameLabel"
            android:layout_toRightOf="@+id/textViewNameLabel"
            android:layout_marginLeft="10dp"
            android:textColor="#A8A8A8"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/appLabel"
            android:id="@+id/textViewAppLabel"
            android:layout_below="@+id/textViewNameLabel"
            android:layout_alignLeft="@+id/textViewAboutMe"
            android:layout_marginTop="4dp"
            android:textColor="#ffffff"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/appData"
            android:id="@+id/textViewAppData"
            android:layout_alignBottom="@+id/textViewAppLabel"
            android:layout_toRightOf="@+id/textViewAppLabel"
            android:layout_marginLeft="10dp"
            android:textColor="#A8A8A8"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/favoritePersonLabel"
            android:id="@+id/textViewFavoritePersonLabel"
            android:layout_below="@+id/textViewAppLabel"
            android:layout_alignLeft="@+id/textViewAboutMe"
            android:layout_marginTop="4dp"
            android:textColor="#ffffff"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/favoritePersonData"
            android:id="@+id/textViewFavoritePersonData"
            android:layout_alignBottom="@+id/textViewFavoritePersonLabel"
            android:layout_toRightOf="@+id/textViewFavoritePersonLabel"
            android:layout_marginLeft="10dp"
            android:textColor="#A8A8A8"/>

</RelativeLayout>
